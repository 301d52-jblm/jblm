<html lang="en">
<%- include('../../partials/head') %>
<body>
  <nav>
    <%- include('../../partials/header') %>
  </nav>
  <main class="adminList">
    <h4>Resources</h4>
    <ul>
      <% resource.forEach(partner => { %>
        <li>
          <img src="<%= partner.logo_png %>">
          <h5>Title: <%= partner.title %></h5>
          <p><%= partner.description %></p>
          <a href="<%= partner.resource_url %>">Resource page</a></br></br>

          <!-- Edit and Delete links -->
          <!-- /${adminRoute}/resource/edit/:id -->
          <a href="<%= `/${adminRoute}/resource/edit/${partner.id}` %>">Edit</a>
          <!-- this should actually be a PUT with _method of delete after a confirmation prompt -->
          <form action="<%= `/${adminRoute}/resource/delete/${partner.id}` %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <a href="/<%= adminRoute %>">Admin Page</a>
  </main>
  <section></section>
  <%- include('../../partials/footer') %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>