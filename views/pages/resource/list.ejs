<html lang="en">
<%- include('../../partials/head') %>
<body>
  <nav>
    <%- include('../../partials/header') %>
  </nav>
  <main class="adminList">
    <h4>Resources</h4>
    <ul>
      <% resource.forEach(partner => { %>
        <li>
          <img src="<%= partner.logo_png %>">
          <h5>&#9830;<%= partner.title %></h5>
          <a href="mailto:<%= partner.email %>">Email</a></br>
          <a href="<%= partner.resource_url %>">Resource page</a>
          <p><%= partner.description %></p>
          <p><%= partner.importance %></p>
        </br></br>

          <!-- Edit and Delete links -->

          <!-- /${adminRoute}/resource/edit/:id -->
          <button id="edit" type="submit">Edit Details</button></br></br>
          <!-- this should actually be a PUT with _method of delete after a confirmation prompt -->
          <form action="<%= `/${adminRoute}/resource/delete/${partner.id}` %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">Delete</button></br></br>
          </form>
        </li>
      <% }) %>
      <%- include('../../partials/edit') %>
    </ul></br></br></br>
    <a href="/<%= adminRoute %>">Back to admin page</a>
  </main>
  <section></section>
  <%- include('../../partials/footer') %>



  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>